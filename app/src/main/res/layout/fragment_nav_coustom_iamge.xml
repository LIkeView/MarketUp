<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:id="@+id/main">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@color/primaryTextColor"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4foxwebsolution@gmail.com"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="true"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/txtTitle2"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="likeandview@gmail.com"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="true"
            android:textSize="10sp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageviewLogo"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/lorex" >
        </ImageView>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/isScrollView"
        android:layout_marginTop="420dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/main">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/relativeLayoutLogo"
                    style="@style/coustome_relativelayout_for_box">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logo"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Name"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firm Name"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Email"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firm Email"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Contect"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firm Number"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Social"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Type"/>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Size"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    style="@style/coustome_relativelayout_for_box">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"/>

                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
